<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- First CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/hotelCardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Image of the hotel -->
            <ImageView
                android:id="@+id/hotelImage1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hotel3" />

            <!-- Hotel name -->
            <TextView
                android:id="@+id/hotelName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Agnus Unawatuna"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <!-- Hotel category -->
            <TextView
                android:id="@+id/hotelCategory1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category: Luxury"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@android:color/darker_gray" />

            <!-- Rating or other hotel information -->
            <TextView
                android:id="@+id/hotelRating1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Rating: 4.5/5"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Second CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/hotelCardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Image of the hotel -->
            <ImageView
                android:id="@+id/hotelImage2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hotel3" />

            <!-- Hotel name -->
            <TextView
                android:id="@+id/hotelName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Lesure Land"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <!-- Hotel category -->
            <TextView
                android:id="@+id/hotelCategory2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category: Adventures"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@android:color/darker_gray" />

            <!-- Rating or other hotel information -->
            <TextView
                android:id="@+id/hotelRating2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Rating: 4.0/5"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>
